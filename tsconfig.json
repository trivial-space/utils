{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext", "dom"],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "dist",
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "dist"]
}
